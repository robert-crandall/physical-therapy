<div class="container mt-5">
  <h1 class="text-center mb-4">Welcome to Workout App</h1>

  <div class="row">
    <% @categories.each do |category| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= category.name %></h5>
            <% if exercise = category.next_exercise %>
              <p class="card-text">Next: <%= exercise.name %></p>
              <%= link_to "Start", exercise_path(exercise), class: "btn btn-primary" %>
            <% else %>
              <p class="card-text text-muted">No exercises yet</p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="text-center mt-4">
    <%= link_to "Settings", settings_path, class: "btn btn-secondary" %>
  </div>
</div>
